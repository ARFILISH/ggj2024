loadBackground("backgrounds/bgTest.xml");

function spawn() {
    for (i in 0...1) {
        setPreparedParam("idx", i);
        spawnEnemy(LocalSpace(35.0 * i, -40.0), "data/levels/level_01_enemy0.hscript");
    }
    clearPreparedParams();
}

function changeColor() {
    setBackgroundColor(1.0, 1.0, 1.0, 1.0, 5.0);
}

addEvent(3.0, changeColor);
addEvent(6.0, spawn);